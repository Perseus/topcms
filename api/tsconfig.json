{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "maxNodeModuleJsDepth": 5,
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "wizard/**/*"
  ]
}